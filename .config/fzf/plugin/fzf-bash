# Setup fzf
# ---------
if [[ ! "$PATH" == */home/trg/.config/fzf/bin* ]]; then
  export PATH="${PATH:+${PATH}:}/home/trg/.config/fzf/bin"
fi

# Auto-completion
# ---------------
[[ $- == *i* ]] && source "$HOME/.config/fzf/plugin/fzf-bash-completion.sh" 2> /dev/null

# Key bindings
# ------------
source "/home/trg/.config/fzf/shell/key-bindings.bash"
